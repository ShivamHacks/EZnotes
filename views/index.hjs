$('#key').on('keyup', function(e) {
	if (e.which == 13) {
		e.preventDefault();
		if ($("#key").val().trim().length > 0) {
			socket.emit('sendsave', {
				email: email,
				userID: myID,
				key: $("#key").val().trim()
			});

			$("#key").val("");
		} else {
			alert('empty field');
		}
	}
});

